@model AlbumCollection.Models.Album

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/details-style.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Capriola|Barlow+Semi+Condensed:700" rel="stylesheet">
    <title>@Model.Name</title>
</head>
<body>
    <section class="art">
        <img src="@Model.ImageURL">
    </section>
    <section class="title">
        <div class="title-info">
            <h1>@Model.Name</h1>
            <h3>By: @Model.Artist</h3>
        </div>
    </section>
    <section class="songs">
        <ol>
            <h1>Tracks</h1>
            @foreach (var song in Model.Songs)
            {
                <li>@song.Name</li>
            }
            <li><a href="/Song/Create/@Model.AlbumId">Add Song</a></li>
        </ol>
    </section>
</body>
<nav>
    <a class="button" href="/Album/Index">Return to Collection</a>
        
</nav>
    

</html>
