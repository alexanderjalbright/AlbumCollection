@model AlbumCollection.Models.Album

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <h1>@Model.Name</h1>
    <h2>By: @Model.Artist</h2>
    <ul>
        @foreach (var song in Model.Songs)
        {
            <li>
                <h3>@song.Name</h3>
            </li>
        }
    </ul>
    <a href="/Song/Create/@Model.AlbumId">Add Song</a>
</body>
</html>
